{{#each ApiValues }}
    <h1>{{this.recipe.label}}</h1>
    <img src="{{this.recipe.image}}" alt="recipe image">
    {{#each this.recipe.ingredients}}
        <p>{{this.text}}</p>
        <p> {{this.quantity}} </p>
        <p> {{this.measure}} </p>
        <p> {{this.food}} </p>
       <!-- <img src="{{this.image}}" alt="image"> -->
    {{/each}}
            <form action="/saveRecipe" method="POST">
            <input type="hidden" name="title" value="{{this.recipe.label}}">
            <input type="hidden" name ="image" value="{{this.recipe.image}}">
            <input type="hidden" name ="url" value="{{this.recipe.url}}">
            <button type="submit">Add to fav</button>
        </form>
    <p>For more specific information :</p>
    <a href="{{this.recipe.url}}">{{this.recipe.url}}</a>

{{/each}}